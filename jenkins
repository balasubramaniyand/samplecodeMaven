pipeline {
    agent {
        label 'love'
    }

    stages {
        stage('Git clone') {
            steps {
                git branch: 'main', 'url": 'https://github.com/balasubramaniyand/samplecodeMaven.git'
            }
        }

        stage('Build with Maven') {
            steps {
                script {
                    def mavenHome = tool 'Maven' // Assumes "Maven" is configured in Jenkins tools
                    def mavenCmd = "${mavenHome}/bin/mvn"
                    sh "${mavenCmd} clean install deploy"
                }
            }
        }
    }
}
